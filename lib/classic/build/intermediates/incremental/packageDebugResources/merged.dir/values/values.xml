<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="red_light">#F4A890</color>
    <declare-styleable name="Form">
        <attr format="boolean" name="ignoreHiddenFields"/>
        <attr format="boolean" name="shakeOnError"/>
    </declare-styleable>
    <declare-styleable name="FormAutoCompleteTextView">
        <attr name="validationType"/>
        <attr name="errorMessage"/>
        <attr name="regex"/>
        <attr name="dateFormat"/>
        <attr name="required"/>
        <attr name="validateOnChange"/>
        <attr name="minInt"/>
        <attr name="maxInt"/>
        <attr name="minFloat"/>
        <attr name="maxFloat"/>
    </declare-styleable>
    <declare-styleable name="FormCheckBox">
        <attr name="validationType"/>
    </declare-styleable>
    <declare-styleable name="FormEditText">
        <attr name="validationType"/>
        <attr name="errorMessage"/>
        <attr name="regex"/>
        <attr name="dateFormat"/>
        <attr name="required"/>
        <attr name="validateOnChange"/>
        <attr name="minInt"/>
        <attr name="maxInt"/>
        <attr name="minFloat"/>
        <attr name="maxFloat"/>
    </declare-styleable>
    <declare-styleable name="FormRatingBar">
        <attr name="validationType"/>
    </declare-styleable>
    <declare-styleable name="FormSeekBar">
        <attr name="validationType"/>
        <attr name="minInt"/>
        <attr name="maxInt"/>
    </declare-styleable>
    <declare-styleable name="FormSpinner">
        <attr name="validationType"/>
        <attr name="invalidIf"/>
    </declare-styleable>
    <declare-styleable name="FormSwitch">
        <attr name="validationType"/>
    </declare-styleable>
    <declare-styleable name="FormToggleButton">
        <attr name="validationType"/>
    </declare-styleable>
    <declare-styleable name="FormValidator">
        <attr name="validationType">
            <enum name="regex" value="0"/>
            <enum name="numeric" value="1"/>
            <enum name="alpha" value="2"/>
            <enum name="alphaNumeric" value="3"/>
            <enum name="email" value="4"/>
            <enum name="creditCard" value="5"/>
            <enum name="phone" value="6"/>
            <enum name="domainName" value="7"/>
            <enum name="ipAddress" value="8"/>
            <enum name="webUrl" value="9"/>
            <enum name="required" value="10"/>
            <enum name="personName" value="11"/>
            <enum name="personFullName" value="12"/>
            <enum name="date" value="13"/>
            <enum name="textLength" value="14"/>
            <enum name="floatRange" value="15"/>
            <enum name="intRange" value="16"/>
            <enum name="optional" value="17"/>
            <enum name="checked" value="18"/>
            <enum name="unchecked" value="19"/>
        </attr>

        <attr name="invalidIf">
            <enum name="firstItemSelected" value="0"/>
            <enum name="nullable" value="1"/>
        </attr>

        <attr format="string" name="errorMessage"/>

        <attr format="string" name="regex"/>
        <attr format="string" name="dateFormat"/>
        <attr format="boolean" name="required"/>
        <attr format="boolean" name="validateOnChange"/>

        <attr format="integer" name="minInt"/>
        <attr format="integer" name="maxInt"/>

        <attr format="float" name="minFloat"/>
        <attr format="float" name="maxFloat"/>

    </declare-styleable>
</resources>