<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sha.formvalidatorsample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.FieldsActivity" />
        <activity android:name=".ui.FormActivity" />
        <activity android:name=".ui.FieldActivity" />
        <activity android:name=".ui.EmailOrCreditCardActivity" />
        <activity android:name=".ui.PrefixAndRangeValidatorActivity" />
        <activity android:name=".ui.PasswordValidatorActivity" />
        <activity android:name=".ui.AutoCompleteTextViewActivity" />
        <activity android:name=".ui.ComposeActivity" />

    </application>

</manifest>